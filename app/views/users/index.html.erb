<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        <% if user.id != current_user.id %>
          Name: <%= user.name %>
          <span class="profile-link">
            <%= link_to 'See Profile', user_path(user.id), class: 'profile-link' %>
            
            <% unless (current_user.pending_friendships.find_by(friend_id: user.id) or current_user.confirmed_friendships.find_by(friend_id: user.id)) %>
              <%= button_to 'Add Friend', 
                friendships_path(:friend_id => user.id,
                :user_id => current_user),
                :method => :post %>
            <% else %>
              <p>Request Sent</p>
            <% end %>
            
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>
