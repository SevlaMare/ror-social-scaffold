<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if @user != current_user %>
    <% unless (current_user.pending_friendships.find_by(friend_id: @user.id) or current_user.confirmed_friendships.find_by(friend_id: @user.id)) %>
      <%= button_to 'Add Friend', 
        friendships_path(:friend_id => @user,
        :user_id => current_user),
        :method => :post %>
    <% else %>
      <p>Request Sent </p>
    <% end %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
